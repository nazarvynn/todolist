{
  "name": "todolist",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve --proxy-config proxy.conf.json",
    "cy:open": "cypress open",
    "pw:run": "npx playwright test",
    "pw:html": "npx playwright show-report playwright/html-results",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "format": "prettier --write \"{src,playwright}/**/*.{js,ts,html,scss,json}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && ng lint"
    }
  },
  "dependencies": {
    "@angular/animations": "^15.0.0",
